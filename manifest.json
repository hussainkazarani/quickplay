{
  "manifest_version": 3,
  "name": "QuickPlay",
  "description": "A youtube extension extending the capabilities of speed-up",
  "version": "1.0",
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "permissions": ["storage"],
  "host_permissions": ["*://www.youtube.com/*", "http://www.youtube.com/*", "https://www.youtube.com/*", "https://*/*"],
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_scripts": []
}
