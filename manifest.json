{
  "manifest_version": 3,
  "name": "QuickPlay",
  "description": "A youtube extension extending the capabilities of speed-up",
  "version": "2.0",
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "utils/background.js",
    "type": "module"
  },
  "permissions": ["scripting", "tabs", "storage", "activeTab"],
  "host_permissions": ["*://*.youtube.com/*"],
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["scripts/contents.js"],
      "css": ["scripts/styles.css"]
    }
  ]
}
